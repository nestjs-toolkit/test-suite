{
  "name": "@nestjs-toolkit/test-suite",
  "version": "2.0.11",
  "description": "Test suite for NestJS applications",
  "author": "Valmir Barbosa",
  "license": "MIT",
  "scripts": {
    "build": "rimraf -rf dist && tsc -p tsconfig.build.json && yarn copy",
    "copy": "cp package.json README.md LICENSE dist",
    "prepare": "",
    "format": "prettier --write \"{lib,tests}/**/*.ts\"",
    "lint": "eslint \"{lib,tests}/**/*.ts\" --fix",
    "test": "jest --config tests/jest.json",
    "test:watch": "jest --config tests/jest.json --watch",
    "test:cov": "jest --config tests/jest.json --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --config tests/jest.json --runInBand",
    "publish:prod": "cd dist && npm publish --access public",
    "publish:local": "cd dist && npm publish --registry http://0.0.0.0:4873"
  },
  "peerDependencies": {
    "@nestjs-toolkit/base": "*",
    "@nestjs/common": "^8.0.0 || ^9.0.0 || ^10.0.0",
    "@nestjs/platform-fastify": "*",
    "collect.js": "*"
  },
  "dependencies": {
    "bson": "^6.9.0",
    "form-data": "^4.0.1",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@nestjs-toolkit/base": "^2.0.4",
    "@nestjs/bull": "^10.2.1",
    "@nestjs/bull-shared": "^10.2.1",
    "@nestjs/cli": "^10.4.5",
    "@nestjs/common": "^10.4.6",
    "@nestjs/core": "^10.4.6",
    "@nestjs/graphql": "^12.2.1",
    "@nestjs/platform-fastify": "^10.4.6",
    "@nestjs/schematics": "^10.2.2",
    "@nestjs/testing": "^10.4.6",
    "@types/jest": "29.5.14",
    "@types/node": "18.19.59",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "bull": "^4.16.3",
    "collect.js": "^4.36.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-prettier": "^4.2.1",
    "graphql": "^16.9.0",
    "jest": "29.7.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.30.1",
    "moment-timezone": "^0.5.46",
    "prettier": "^2.8.8",
    "reflect-metadata": "^0.2.2",
    "rimraf": "^6.0.1",
    "rxjs": "^7.8.1",
    "source-map-support": "^0.5.21",
    "string-format": "^2.0.0",
    "ts-jest": "29.2.5",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "^5.0.0"
  },
  "packageManager": "yarn@4.5.1"
}

{
  "name": "@nestjs-toolkit/test-suite",
  "version": "2.0.8",
  "description": "Test suite for NestJS applications",
  "author": "Valmir Barbosa",
  "license": "MIT",
  "scripts": {
    "build": "rimraf -rf dist && tsc -p tsconfig.build.json && yarn copy",
    "copy": "cp package.json README.md LICENSE dist",
    "prepare": "",
    "format": "prettier --write \"{lib,tests}/**/*.ts\"",
    "lint": "eslint \"{lib,tests}/**/*.ts\" --fix",
    "test": "jest --config tests/jest.json",
    "test:watch": "jest --config tests/jest.json --watch",
    "test:cov": "jest --config tests/jest.json --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --config tests/jest.json --runInBand",
    "publish:prod": "cd dist && npm publish --access public",
    "publish:local": "cd dist && npm publish --registry http://0.0.0.0:4873"
  },
  "peerDependencies": {
    "@nestjs-toolkit/base": "*",
    "@nestjs/common": "^8.0.0 || ^9.0.0",
    "@nestjs/platform-fastify": "*",
    "collect.js": "*"
  },
  "dependencies": {
    "bson": "^5.4.0",
    "form-data": "^4.0.0",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@nestjs-toolkit/base": "^2.0.1",
    "@nestjs/bull": "^0.6.3",
    "@nestjs/bull-shared": "^0.1.3",
    "@nestjs/cli": "^9.0.0",
    "@nestjs/common": "^9.0.0",
    "@nestjs/core": "^9.0.0",
    "@nestjs/graphql": "^11.0.5",
    "@nestjs/platform-fastify": "^9.4.1",
    "@nestjs/schematics": "^9.0.0",
    "@nestjs/testing": "^9.0.0",
    "@types/jest": "29.5.1",
    "@types/node": "18.16.12",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "bull": "^4.10.4",
    "collect.js": "^4.36.1",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "graphql": "^16.6.0",
    "jest": "29.5.0",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.0",
    "moment": "^2.29.4",
    "moment-timezone": "^0.5.43",
    "prettier": "^2.3.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^5.0.1",
    "rxjs": "^7.2.0",
    "source-map-support": "^0.5.20",
    "string-format": "^2.0.0",
    "ts-jest": "29.1.0",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "4.2.0",
    "typescript": "^5.0.0"
  },
  "packageManager": "yarn@3.5.1"
}
